<!-- Yorum Yapma Formu -->
<div class="content-form">
    <h3>Bir Yorum Yapın</h3>


    <form action="#" method="post">
     
        <div class="form-group">
            <input type="text" class="form-control" placeholder="ID" name="Blogid" value="@ViewBag.deger" required />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Kullanıcı Adı" name="KullaniciAdi" required />
        </div>
        <div class="form-group">
            <input type="email" class="form-control" placeholder="Mail Adresi" name="Mail" required />
        </div>
        <div class="form-group">
            <textarea class="form-control" placeholder="Yorum" name="Yorum" required></textarea>
        </div>
        <input type="submit" class="btn btn-primary" value="Gönder" />
    </form>
</div>
