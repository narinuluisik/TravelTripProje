@using TravelTripProje.Models.Siniflar
@model List<Blog>

@foreach (var x in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@x.BlogImage" style="width: 100%; height: 175px; object-fit: cover;" alt="" />
        </div>
        <div class="left-text">
            <h4>@x.Baslik </h4>
            <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@(x.Aciklama.Length > 80 ? x.Aciklama.Substring(0, 80) : x.Aciklama)</p>
            <p><a href="/Blog/BlogDetay/@x.ID"><span class="read"> Devamını Oku</span></a></p>
        </div>
    </div>
}
