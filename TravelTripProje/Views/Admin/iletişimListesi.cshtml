@using TravelTripProje.Models.Siniflar
@model List<iletişim>
@{
    ViewBag.Title = "iletişimListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>iletişim Listesi</h2>




<table class=" table table-bordered">
    <tr>
        <th>ID</th>
        <th> AD Soyad</th>
        <th>Mail</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {

        <tr>
            <td>@x.ID</td>
            <td>@x.AdSoyad</td>
            <td>@x.Mail</td>
            <td>@x.Konu</td>
            <td>@x.Mesaj</td>
            <td><a href="/Admin/iletişimListesi/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/iletişimGetir/@x.ID" class="btn btn-warning">Güncelle</a></td>

        </tr>
    }
</table>