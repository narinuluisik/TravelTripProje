@using TravelTripProje.Models.Siniflar

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE HTML>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7fa;
            margin: 0;
            padding: 0;
        }

        .content {
            padding: 50px 15px;
            text-align: center;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
        }

        .wrap {
            max-width: 1100px;
            margin: 0 auto;
        }

        h2 {
            font-size: 2.5rem;
            color: #333;
            font-weight: 600;
            margin-bottom: 20px;
        }

        p {
            font-size: 1.1rem;
            line-height: 1.8;
            color: #666;
            margin-bottom: 30px;
        }

        .categories {
            margin-top: 40px;
        }

            .categories h3 {
                font-size: 1.8rem;
                font-weight: 600;
                color: #333;
                margin-bottom: 20px;
            }

            .categories ul {
                list-style-type: none;
                padding: 0;
                display: flex;
                justify-content: center;
                gap: 30px;
                flex-wrap: wrap;
            }

                .categories ul li {
                    margin: 10px;
                    width: 250px;
                    height: 250px;
                    background-color: #fff;
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                    border-radius: 10px;
                    transition: transform 0.3s ease, box-shadow 0.3s ease;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }

                    .categories ul li a {
                        font-size: 1.2rem;
                        color: #fff;
                        background-color: #4CAF50;
                        padding: 20px;
                        text-decoration: none;
                        border-radius: 8px;
                        text-align: center;
                        display: block;
                        width: 80%;
                    }

                    .categories ul li:hover {
                        transform: translateY(-10px);
                        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
                    }

                        .categories ul li:hover a {
                            background-color: #45a049;
                        }

        .footer-bottom {
            padding: 20px;
            background-color: #333;
            color: #fff;
            text-align: center;
        }

        .copy {
            font-size: 0.9rem;
        }
    </style>
</head>

<body>
    <div class="content">
        <div class="wrap">
            <h2>Rehber Sayfası</h2>
            <p>Burada size yardımcı olacak farklı seyahat rehberlerine göz atabilirsiniz:</p>
            <p>Oteller, restoranlar veya müzeler hakkında bilgi mi arıyorsunuz? İlgili sayfalara göz atarak ihtiyacınıza göre rehberlerden yardım alabilirsiniz.</p>

            <div class="categories">
                <h3>İlgilendiğiniz Alanı Seçin:</h3>
                <ul>
                    <li><a href="/Rehber/Hotels">Otelleri keşfetmek için tıklayın</a></li>
                    <li><a href="/Rehber/Restaurants">Restoranlar için rehberimizi inceleyin</a></li>
                    <li><a href="/Rehber/Museums">Müzeleri keşfedin</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="footer-bottom">
        <div class="wrap">
            <div class="copy">
                <p>&copy; 2025 Tatil - Seyahat. Tüm hakları saklıdır <a href="http://w3layouts.com" style="color: #fff; text-decoration: none;">W3Layouts</a></p>
            </div>
        </div>
    </div>
</body>

</html>
